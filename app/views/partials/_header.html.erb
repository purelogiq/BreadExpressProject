<% if !logged_in? || current_user.role?(:shipper) || current_user.role?(:baker) %>
  <!-- Drop down for general pages in nav bar -->
  <ul id="general-pages-dropdown" class="dropdown-content">
    <li><a href="/about">About Us</a></li>
    <li class="divider"></li>
    <li><a href="/contact">Contact Us</a></li>
    <li class="divider"></li>
    <li><a href="/privacy">Privacy Policy</a></li>
  </ul>
<% end %>

<div class="navbar">
  <nav>
    <div class="nav-wrapper container">
      <a href="/" class="brand-logo">Bread Express</a>
      <ul class="right">
        <% if current_user.nil? || current_user.role?(:shipper) || current_user.role?(:baker) %>
          <li><a class="dropdown-button" href="#!" data-activates="general-pages-dropdown">More Of Us<i class="mdi-navigation-arrow-drop-down right"></i></a></li>
        <% elsif current_user.role? :admin %>
          <li><a href="/manage">Manage</a></li>
          <li><a href="/shop">Shop</a></li>
          <li><a href="/customers">Customers</a></li>
          <li><a href="/addresses">Addresses</a></li>
          <li><a href="/orders">Orders</a></li>
        <% elsif current_user.role? :customer %>
          <li><%= link_to "My Account", current_user.customer %></li>
          <li><a href="/addresses">My Addresses</a></li>
          <li><a href="/orders">My Orders</a></li>
        <% end %>
        <% if logged_in? %>
          <li><a href="/logout">Logout</a></li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>

<!-- Small parallax image at top with informational text embedded -->
<div class="parallax-container" style="height: 120px">
  <div class="parallax faded-bg-image"><%= image_tag "bg-#{rand(0..6)}.jpg"%></div>
  <div class="container">
    <h4 class="center-align white-text raised-text no-margin-bot"><%= yield :page_heading %></h4>
    <p class="center-align white-text raised-text" style="margin: 2px"><%= yield :page_info %></p>
  </div>
</div>
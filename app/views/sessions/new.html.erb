<% content_for :title, "Log In - Bread Express" %>
<% content_for :page_heading, "Login" %>
<% content_for :page_info, "Enter your username and password below." %>

<div class="section white z-depth-5">
  <div class="container">
    <%= render 'partials/flash' %>
    <br />
    <div class="row">
      <div class="col s6 offset-s3">
        <%= form_tag :sessions do %>
          <fieldset class="round-fieldset">
            <div class="row">
              <div class="input-field col s12">
                <i class="mdi-action-account-circle prefix"></i>
                <%= label_tag :username %>
                <%= text_field_tag :username, params[:username], required: 'required' %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <i class="mdi-hardware-security prefix"></i>
                <%= label_tag :password %>
                <%= password_field_tag :password, nil, required: 'required' %>
              </div>
            </div>
            <div class="row center-align">
              <div class="col s6">
                <button class="btn waves-effect waves-light" type="submit" name="action">Log In
                  <i class="mdi-content-send right"></i>
                </button>
              </div>
              <div class="col s6">
                <a class="btn waves-effect waves-light" href="/signup">Sign Up
                  <i class="mdi-content-add right"></i>
                </a>
              </div>
            </div>
          </fieldset>
      <% end %>
      </div>
    </div>
  </div>
</div>


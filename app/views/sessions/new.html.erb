<h3>Log In</h3>
<div class="row">
  <div class="small-7 columns">
    <%= form_tag :sessions do %>
      <div class="control-group">
        <%= label_tag :username %>
        <div class="controls">
          <%= text_field_tag :username, params[:username] %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :password %>
        <div class="controls">
          <%= password_field_tag :password %>
        </div>
      </div>

      <div class="actions"><%= submit_tag "Log In" %></div>
    <% end %>
  </div>
</div>